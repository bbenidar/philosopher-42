SRC = philo_main.c utils.c philo_creat.c chaecker.c routine.c  

OBG = $(SRC:.c=.o)

HEAD="\n"\
	"\033[1;93m██████╗ ██╗  ██╗██╗██╗      ██████╗ ███████╗ ██████╗ ██████╗ ██╗  ██╗███████╗██████╗ ███████╗\n"\
